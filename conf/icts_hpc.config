/*
 * -------------------------------------------------
 *  University of Cape Town HEX cluster config file
 * -------------------------------------------------
 * http://hpc.uct.ac.za/index.php/hex-3/
 */

singularity {
   enabled = true
}

process {
   container = "/bb/DB/bio/singularity-containers/1a32017e5935-2018-05-31-db3a9cebe9fc.img";
   
   withName: runFastQC {
    container='/bb/DB/bio/singularity-containers/h3abionet_org_h3a16s-fastqc.img';
   }
  
   withName: runMultiQC {
     container='/bb/DB/bio/singularity-containers/h3abionet_org_h3a16s-fastqc.img';
   } 
 
   withName: runFastQC_postfilterandtrim {
     container='/bb/DB/bio/singularity-containers/h3abionet_org_h3a16s-fastqc.img';
   }

   withName: runMultiQC_postfilterandtrim {
    container='/bb/DB/bio/singularity-containers/h3abionet_org_h3a16s-fastqc.img';
   }
   
   stageInMode = 'symlink'
   stageOutMode = 'rsync'

   executor = 'slurm'
   queue = 'ada'
   time = 24.h
   errorStrategy = 'retry'
   maxRetries = 5
   maxErrors = 1000
   clusterOptions = '--account cbio --mail-user=katieviljoen@gmail.com --mail-type=BEGIN,END,FAIL'
   memory =  4.GB
   cpus = 1
}

executor{
   jobName = { "$task.tag" }
   queueSize = 10
   submitRateLimit = '10 min'
}

params {
   max_memory = 384.GB
   max_cpus = 40
   max_time = 72.h
}
